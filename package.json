{
    "name": "defcon-website",
    "version": "1.0.0",
    "scripts": {
        "build": "npm run style:build && npm run javascript:build",
        "style:build": "sass --style=compressed src/sass/styles.sass public/css/styles.css",
        "style:watch": "sass --watch src/sass/styles.sass public/css/styles.css",
        "javascript:build": "webpack --mode=production",
        "javascript:watch": "webpack --mode=development --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dwin94/defcon.git"
    },
    "author": "David Windler",
    "bugs": {
        "url": "https://github.com/dwin94/defcon/issues"
    },
    "homepage": "https://github.com/dwin94/defcon#readme",
    "devDependencies": {
        "sass": "^1.22.1",
        "webpack": "^4.35.0",
        "webpack-cli": "^3.3.5"
    }
}
